<!DOCTYPE html>
<html ng-app="leaderboardApp">
<head>
  <title>Golf Leadboard</title>

  <link rel="stylesheet" href="/static/stylesheets/style.css">

  <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/angular.js/1.3.15/angular.min.js"></script>
  <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/angular.js/1.3.15/angular-resource.min.js"></script>
  <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/angular.js/1.3.15/angular-animate.min.js"></script>
  <script type="text/javascript" src="/static/js/leaderboard.js"></script>
</head>
<body>
  <div class="leaderboard" ng-controller="LeaderboardCtrl">
    <header>
      <h1>[[ compName ]]</h1>
    </header>

    <table cellspacing="0" cellpadding="0" >
      <tbody>
        <tr class="animation leader" ng-repeat="score in leaders">
          <td># [[ score.position ]]</td>
          <td>[[ score.player ]]</td>
          <td ng-repeat="r in score.rounds">[[ r ]]</td>
          <td>[[ score.total ]]</td>
        </tr>

        <tr class="leader-divide"></tr>

        <tr class="animation" ng-repeat="score in visibleScores">
          <td># [[ score.position ]]</td>
          <td>[[ score.player ]]</td>
          <td ng-repeat="r in score.rounds">[[ r ]]</td>
          <td>[[ score.total ]]</td>
        </tr>
      </tbody>
    </table>
  </div>
</body>
</html>
